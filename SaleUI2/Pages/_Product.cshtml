
@model SaleUI2.Pages.ProductIndexModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<form method="POST">

    <div class="row">
        <div class="col-md-4">
            <label asp-for="Product.Id"></label>
            <input readonly asp-for="Product.Id" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="Product.ProductSKU"></label>
            <input asp-for="Product.ProductSKU" class="form-control" />
            <span class="alert-danger" asp-validation-for="Product.ProductSKU"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="Product.Price"></label>
            <input asp-for="Product.Price" class="form-control" />
            <span class="alert-danger" asp-validation-for="Product.Price"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="Product.LazadaSKU"></label>
            <input asp-for="Product.LazadaSKU" class="form-control" />
            <span class="alert-danger" asp-validation-for="Product.LazadaSKU"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="Product.DateCreated"></label>
            <input asp-for="Product.DateCreated" class="form-control" />
            <span class="alert-danger" asp-validation-for="Product.DateCreated"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="Product.EncodedBy"></label>
            <input asp-for="Product.EncodedBy" class="form-control" />
            <span class="alert-danger" asp-validation-for="Product.EncodedBy"></span>
        </div>
    </div>
    <br>

    @if (String.IsNullOrEmpty(Model.Product?.Id))
    {
        <input type="submit" value="Save" class="btn btn-primary" />
        <button type="button" class="btn btn-danger" onclick="window.location='./ProductIndex'">Cancel</button>
    }
    else
    {
        <button type="submit" class="btn btn-warning" asp-page-handler="update" disabled="true">Update</button>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');" asp-page-handler="Delete" asp-route-id="@Model.Product.Id">Delete</button>
        <button type="button" class="btn btn-info" onclick="window.location='/ProductIndex'">
            Return to Products >>
        </button>
    }
</form>