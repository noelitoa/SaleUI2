@page
@model SaleUI2.Pages.SaleIndexModel
@{
    ViewData["Title"] = "SaleIndex";
}

<h2>SaleIndex</h2>

<form method="POST">
    <div class="row">
        <div class="col-md-4">
            <label asp-for="SaleEntry.ProductSKU"></label>
            <input asp-for="SaleEntry.ProductSKU" class="form-control" />
