
@model SaleUI2.Models.Inventory
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<form method="POST">

    <div class="row">
        <div class="col-md-4">
            <label asp-for="Id"></label>
            <input readonly asp-for="Id" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="ProductSKU"></label>
            <input asp-for="ProductSKU" class="form-control" />
            <span class="alert-danger" asp-validation-for="ProductSKU"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="ProductName"></label>
            <input asp-for="ProductName" class="form-control" />
            <span class="alert-danger" asp-validation-for="ProductName"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" />
            <span class="alert-danger" asp-validation-for="Quantity"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="LazadaSKU"></label>
            <input asp-for="LazadaSKU" class="form-control" />
            <span class="alert-danger" asp-validation-for="LazadaSKU"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="LastSaleDate"></label>
            <input asp-for="LastSaleDate" class="form-control" />
            <span class="alert-danger" asp-validation-for="LastSaleDate"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="EncodedBy"></label>
            <input asp-for="EncodedBy" class="form-control" />
            <span class="alert-danger" asp-validation-for="EncodedBy"></span>
        </div>
    </div>
    <br>

    @if (String.IsNullOrEmpty(Model.Id))
    {
        <input type="submit" value="Save" class="btn btn-primary" />
        <button type="button" class="btn btn-danger" onclick="window.location='./InventoryIndex'">Cancel</button>
    }
    else
    {
        <button type="submit" class="btn btn-warning" asp-page-handler="update">Update</button>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');" asp-page-handler="Delete" asp-route-id="@Model.Id">Delete</button>
        <button type="button" class="btn btn-info" onclick="window.location='/InventoryIndex'">
            Return to Inventories >>
        </button>
    }
</form>