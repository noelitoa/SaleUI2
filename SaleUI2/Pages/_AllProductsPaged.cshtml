@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core
@model SaleUI2.Pages.ProductIndexModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />
@if (Model.Products.Any())
{
    <h3>Products</h3>
    <div class="table-responsive">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("SKU")
                    </th>
                    <th>
                        @Html.DisplayName("Name")
                    </th>
                    <th>
                        @Html.DisplayName("Price")
                    </th>
                    <th>Edit | Delete</th>
                </tr>

            </thead>

            @foreach (var product in Model.PageProducts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => product.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => product.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => product.Price)
                    </td>
                    <td>
                        <a asp-page="./ProductIndex" asp-route-id="@product.Id">Edit</a> |
                        <a asp-page="./ProductIndex" onclick="return confirm('Are you sure you want to delete this item?');" asp-page-handler="Delete" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>

            }
        </table>

    </div>
    @Html.PagedListPager((IPagedList)Model.PageProducts, page => "ProductIndex?handler=paging&id="+ page)
}